@model IEnumerable<WebApplication1.Models.TblTipoCentro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoCentro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCentro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipoCentro">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipoCentro">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipoCentro">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
