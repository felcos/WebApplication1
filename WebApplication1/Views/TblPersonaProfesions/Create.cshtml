@model WebApplication1.Models.TblPersonaProfesion

@{

    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    ViewData["Title"] = "Crear Nuevo";
}

<h1>Agregar una profesion a @ViewBag.Persona</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPersona" class="control-label"></label>

                <input type="text" value="ViewBag.IdPersona" name="IdPersona" />
            </div>
            <div class="form-group">
                <label asp-for="IdProfesion" class="control-label"></label>
                <select asp-for="IdProfesion" class ="form-control" asp-items="ViewBag.IdProfesion"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
